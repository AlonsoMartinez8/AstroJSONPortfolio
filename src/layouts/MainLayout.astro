---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
import HeaderNav from "@c/HeaderNav";
import { Image } from "astro:assets";
import logo from "@img/logo.webp";
import "remixicon/fonts/remixicon.css";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={logo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-[100vh] bg-gradient-to-tr from-slate-200 to-gray-300">
    <header
      class="sticky top-0 z-40 flex items-center justify-between gap-4 mb-4 px-4 py-2 backdrop-blur-sm"
    >
      <aside class="flex items-center justify-start gap-4">
        <a href="/">
          <Image
            src={logo}
            width={40}
            decoding="async"
            loading="eager"
            alt="Imagen del logo de este sitio web"
            class="rounded-full hover:animate-pulse"
          />
        </a>
      </aside>
      <HeaderNav client:visible logo={logo} />
    </header>
    <slot />
    <Footer/>
  </body>
</html>

<style is:global>
  html{
    scroll-behavior: smooth;
  }
  .glow {
    width: 100px;
    aspect-ratio: 1;
    background: #003cff22;
    box-shadow: 0 0 100px 100px #003cff22;
    border-radius: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -50;
  }
</style>

<script type="text/javascript"
        src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js">
</script>
