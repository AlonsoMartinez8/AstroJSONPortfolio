---
import SectionLayout from "@l/SectionLayout.astro";
import data from "@a/data.json";
const experiencia = data.experiencia;
---

<SectionLayout id="experiencia">
  <h2 slot="titulo" class="text-2xl font-semibold text-slate-900 mb-4">
    <i class="ri-hammer-fill"></i> Experiencia
  </h2>
  <ul
    class="flex items-center justify-start gap-4 flex-wrap flex-col lg:grid lg:grid-cols-2"
  >
    {
      experiencia.map((e) => (
        <li
          class={`h-full w-full p-4 text-center flex flex-col items-center justify-between rounded-xl bg-gradient-to-tr shadow-md hover:shadow-lg relative ${e.fechaFin == "actualidad" ? "to-slate-200/75 from-blue-900/20 lg:col-span-2" : "from-white/75 to-slate-300 lg:col-span-1"}`}
        >
          <span class="px-2 py-1 bg-slate-700/20 rounded-full text-xs">
            {e.fechaInicio} - {e.fechaFin}
          </span>
          <h3 class="text-xl mt-2 text-slate-900">{e.nombrePuesto}</h3>
          <h4 class="mb-2">
            <strong>{e.empresa}</strong>
          </h4>
          <p class="opacity-75">{e.descripcion}</p>
        </li>
      ))
    }
  </ul>
</SectionLayout>
